@model Department;
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div asp-validation-summary="All" class=" alert alert-danger"></div>
<form asp-action="Edit">

    <div class=" form-group">
        <label asp-for="Code" class="col-form-label"> </label>
