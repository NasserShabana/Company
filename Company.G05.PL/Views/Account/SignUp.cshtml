@model SignUPViewModel
@{
	ViewData["Title"] = "SignUp";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Creative SignUp Form</h1>

<div class="main-agileinfo">
<div asp-validation-summary="All" class="alert alert-danger"></div>
	<div class="agileits-top">

		<form asp-action="SignUp">

			<input class="text" asp-for="UeserName" placeholder="UeserName" required="">
			<input class="text" asp-for="FirstName" placeholder="FirstNam " required="">
			<input class="text" asp-for="LastName"  placeholder="LastName " required="">
			<input class="text" asp-for="Email"     placeholder="Email" required="">
			<input class="text w3lpass" asp-for="Password" placeholder="Password" required="">
			<input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">

			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Don't have an Account? <a asp-action="SignIn"> Login Now!</a></p>
	</div>
</div>
