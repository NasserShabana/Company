@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
         overflow-Y:auto;
    }

    h1 {
        text-align: center; /* Center the title */
        margin-bottom: 30px; /* Space below the title */
        color: white; /* Title color */
    }

    .card {
        margin: 5px; /* Margin around cards */
        border-radius: 10px ; /* Rounded corners */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Shadow for depth */
        background-color: white; /* Card background color */
        overflow: hidden; /* Ensures header border radius is respected */
    }

    .card-header {
        background-color: #76b852; /* Header background color */
        color: white; /* Header text color */
        font-weight: bold  ; /* Bold header text */
        padding: 10px; /* Padding for header */
        border-bottom: 2px solid black; /* Darker green border for contrast */
    }

    .card:hover {
        transform: translateY(-5px); /* Lift effect on hover */
    }

    .btn {
        margin: 5px; /* Small margin for buttons */
        transition: background-color 0.3s; /* Smooth button transition */
    }

    .alert {
        margin: 20px auto; /* Center alert */
        width: 90%; /* Alert width */
    }

    .search-container {
        margin: 20px auto;
        display: flex;
        justify-content: center;
    }

        .search-container input[type="text"] {
            width: 80%;
            margin-right: 10px;
        }

    .btn-large {
        padding: 6px 6px; /* Increase padding */
        font-size: 18px; /* Increase font size */
        border-radius: 4px; /* Optional: for rounded corners */
    }
</style>

<h1>All Employees</h1>

<div class="search-container">
    <input type="text" id="searchInput" class="form-control" placeholder="Search by name, age, phone..." onkeyup="filterEmployees()" />
</div>

@if (Model.Any())

{
    <div id="employeeCards" class="d-flex flex-wrap justify-content-center">
        @foreach (var employee in Model)

        {
            <div class="card employee-card" style="width: 300px;">
                <div class="card-header">
                    Employee Name: @employee.Name
                </div>
                <div class="card-body" style="color:black;">
                    <img src="~/Files/Images/@employee.ImageName" width="75" class="rounded-circle" /><br />
                    <strong>Age:</strong> @employee.Age<br />
                    <strong>Department Name:</strong> @(employee.WorkFor?.Name ?? "-")<br />
                    <strong>Address:</strong> @employee.Address<br />
                    <strong>Email:</strong> @Html.DisplayFor(e => employee.Email)<br />
                    <strong>Salary:</strong> @Html.DisplayFor(e => employee.Salary)<br />
                    <strong>Phone Number:</strong> @employee.PhoneNumber<br />
                    <strong>Active:</strong> @(employee.IsActive ? "True" : "False")<br />
                    <strong>Hiring Date:</strong> @employee.HiringDate.ToString("d")<br />
                    <div>
                        <partial name="ButtonPartialView" model="employee.Id.ToString()" />
                    </div>
                </div>
            </div>
        }
    </div>
}

else

{
    <div class="alert alert-danger">
        <h4>There are No Employees :( </h4>
    </div>
}

<div>
    <a asp-action="Create" class="btn btn-primary btn-large">Add Employee</a>
</div>

<script>
    function filterEmployees() {
        const input = document.getElementById('searchInput');
        const filter = input.value.toLowerCase();
        const cards = document.getElementsByClassName('employee-card');

        Array.from(cards).forEach(card => {
            const name = card.querySelector('.card-header').textContent.toLowerCase();
            const age = card.querySelector('.card-body').innerHTML.toLowerCase();
            const phoneNumber = card.querySelector('.card-body').innerHTML.toLowerCase();

            if (name.includes(filter) || age.includes(filter) || phoneNumber.includes(filter)) {
                card.style.display = '';
            } else {
                card.style.display = 'none';
            }
        });
    }
</script>
