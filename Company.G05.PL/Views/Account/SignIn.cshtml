@model SignINViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<h1>Creative SignIn Form</h1>

<div class="main-agileinfo">
	<div asp-validation-summary="All" ></div>
	<div class="agileits-top">

		<form asp-action="SignIn">

			
			<input class="text" asp-for="Email" placeholder="Email" required="">
			<input class="text w3lpass" asp-for="Password" placeholder="Password" required="">


			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox" >
					<span>Remembr Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp"> Register Now!</a></p>
		<p> <a asp-action="ForgetPassword"> ForgetPassword?</a></p>
	</div>
</div>

